{
	"input": {
		"filename": "fishes.svg"
	},
	"output": {
		"type": "png",
		"filename": "%b-%n.%e",
		"slides": [
			{"name": "blue background", "include": ["L0"]},
			{"name": "day sky", "include": ["L0", "L1"]},
			{"name": "sun", "include": ["#0-#2"]},
			{"name": "red fish", "include": ["#0-#3"]},
			{"name": "both fishes", "include": ["#0-#4"]},
			{"name": "day chat", "include": ["#0-#5"]},
			{"name": "night sky", "include": ["#0-#6"], "exclude": ["L5 msg:greetings"]},
			{"name": "moon", "based-on": "night sky", "include": ["#7"]},
			{"name": "1star", "based-on": "moon", "include": ["#8"]},
			{"name": "2stars", "based-on": "1star", "include": ["#9"]},
			{"name": "3stars", "based-on": "2stars", "include": ["#10"]},
			{"name": "4stars", "based-on": "3stars", "include": ["#11"]},
			{"name": "night chat", "based-on": "4stars", "include": ["#12"]},
			{"name": "end", "based-on": "4stars"}
		]
	}
}
